<html>

<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
    </style>
</head>

<body>
    <h3 style="text-align: center;">LeoStore</h3>
    <h3>Informações do cliente:</h3>
    <table>
        <tr>
            <th>Nome: <%= name %></th>
            <th>Email: <%= email %></th>
        </tr>
        <tr>
            <th>Telefone: <%= contactNumber %></th>
            <th>Metodo de pagamento: <%= paymentMethod %></th>
        </tr>
    </table>

    <h3>Detalhes do produto:</h3>
    <table>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Quantidade</th>
            <th>Preço</th>
            <th>subTotal</th>
        </tr>
        <% if(productDetails.length > 0) { %>
            <% productDetails.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.price %></td>
                    <td><%= product.total %></td>
                </tr>
                <%});%>
                <%}%>
    </table>
    <h3>Total: <%= totalAmount %></h3>
    <h3>Obrigado por escolher a LeoStore</h3>
</body>

</html>